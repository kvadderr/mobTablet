<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    xmlns:control="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
    Size="600, 280"
    Color="Transparent"
    x:Class="MobTablet.Popups.PopupConfirm">
    <Frame
        CornerRadius="12"
        Padding="0">
        <StackLayout
            Background="{StaticResource popupGradient}"
            Spacing="50"
            Padding="100, 50, 100, 50">
            <Label
                Text="Подтверждаешь покупку “Фирменная футболка “Koffein”"
                HorizontalTextAlignment="Center"
                Style="{StaticResource BoldText}"
                FontSize="20" />
            <Button
                Text="Да"
                TextColor="#1E1584"
                FontFamily="noto_sans_regular"
                FontSize="16"
                Background="{StaticResource greenGradient}"
                WidthRequest="100"
                CornerRadius="12" />
        </StackLayout>
    </Frame>
</xct:Popup>