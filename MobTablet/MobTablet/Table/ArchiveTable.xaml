                                HeightRequest="40"
                                WidthRequest="40"
                                CornerRadius="12"
                                Background="{StaticResource greenGradient}"
                                HorizontalOptions="Center"
                                VerticalOptions="Center">
                                <Label
                                    Style="{StaticResource BoldText}"
                                    FontSize="20"
                                    Text="{Binding ID}"
                                    TextColor="White"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center" />
                            </Frame>
