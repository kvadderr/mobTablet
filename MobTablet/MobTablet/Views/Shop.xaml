                                </StackLayout>
                                <Frame
                                    Background="{StaticResource blueGradient}"
                                    Margin="0"
                                    VerticalOptions="EndAndExpand">
                                    <Label
                                        Text="Хочу"
                                        TextColor="White"
                                        Style="{StaticResource MediumText}"
                                        FontSize="20"
                                        HorizontalTextAlignment="Center" />
                                </Frame>
                            </StackLayout>
                        </Frame>

                        <Frame
                            Margin="10, 10, 10, 20"
                            Padding="0, 40, 0, 0"
                            BackgroundColor="White"
                            WidthRequest="285"
                            CornerRadius="12"
                            HasShadow="True">
                            <StackLayout
                                Orientation="Vertical"
                                Spacing="12"
                                Padding="0">
                                <Label
                                    Text="Фирменная кепка “Koffein”"
                                    WidthRequest="170"
                                    FontSize="20"
                                    Style="{StaticResource MediumText}"
                                    HorizontalTextAlignment="Center" />
                                <Image
                                    Source="kepka.png"
                                    WidthRequest="200"
                                    HeightRequest="200" />
                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="Center">
                                    <Image
                                        Source="small_coin.png" />
                                    <Label
                                        Text="1346"
                                        FontSize="20"
                                        Style="{StaticResource BoldText}" />
                                </StackLayout>
                                <Frame
                                    Background="{StaticResource blueGradient}"
                                    Margin="0"
                                    VerticalOptions="EndAndExpand">
                                    <Label
                                        Text="Копить"
                                        TextColor="#FDCB02"
                                        Style="{StaticResource MediumText}"
                                        FontSize="20"
                                        HorizontalTextAlignment="Center" />
                                </Frame>
                            </StackLayout>
                        </Frame>

                        <Frame
                            Margin="10, 10, 10, 20"
                            Padding="0, 40, 0, 0"
                            BackgroundColor="White"
                            WidthRequest="285"
                            CornerRadius="12"
                            HasShadow="True">
                            <StackLayout
                                Orientation="Vertical"
                                Spacing="12"
                                Padding="0">
                                <Label
                                    Text="Фирменная футболка “Koffein”"
                                    FontSize="20"
                                    Style="{StaticResource MediumText}"
                                    HorizontalTextAlignment="Center" />
                                <Image
                                    Source="Tshirt.png"
                                    WidthRequest="200"
                                    HeightRequest="200" />
                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="Center">
                                    <Image
                                        Source="small_coin.png" />
                                    <Label
                                        Text="1346"
                                        FontSize="20"
                                        Style="{StaticResource BoldText}" />
                                </StackLayout>
                                <Frame
                                    Background="{StaticResource blueGradient}"
                                    Margin="0"
                                    VerticalOptions="EndAndExpand">
                                    <Label
                                        Text="Хочу"
                                        TextColor="White"
                                        Style="{StaticResource MediumText}"
                                        FontSize="20"
                                        HorizontalTextAlignment="Center" />
                                </Frame>
                            </StackLayout>
                        </Frame>

                        <Frame
                            Margin="10, 10, 10, 20"
                            Padding="0, 40, 0, 0"
                            BackgroundColor="White"
                            WidthRequest="285"
                            CornerRadius="12"
                            HasShadow="True">
                            <StackLayout
                                Orientation="Vertical"
                                Spacing="12"
                                Padding="0">
                                <Label
                                    Text="Фирменная футболка “Koffein”"
                                    FontSize="20"
                                    Style="{StaticResource MediumText}"
                                    HorizontalTextAlignment="Center" />
                                <Image
                                    Source="Tshirt.png"
                                    WidthRequest="200"
                                    HeightRequest="200" />
                                <StackLayout
                                    Orientation="Horizontal"
                                    HorizontalOptions="Center">
                                    <Image
                                        Source="small_coin.png" />
                                    <Label
                                        Text="1346"
                                        FontSize="20"
                                        Style="{StaticResource BoldText}" />
                                </StackLayout>
                                <Frame
                                    Background="{StaticResource blueGradient}"
                                    Margin="0"
                                    VerticalOptions="EndAndExpand">
                                    <Label
                                        Text="Хочу"
                                        TextColor="White"
                                        Style="{StaticResource MediumText}"
                                        FontSize="20"
                                        HorizontalTextAlignment="Center" />
                                </Frame>
                            </StackLayout>
                        </Frame>


                    </FlexLayout>
                </ScrollView>
            </Frame>

        </StackLayout>


    </ContentView.Content>
</ContentView>