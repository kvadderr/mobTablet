<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobTablet.Views.Achievements">
  <ContentView.Content>
        <ScrollView>
            <StackLayout Spacing="32" Orientation="Vertical" Margin="0, 0, 20, 0">
                <Label Text="Достижения" Style="{StaticResource BoldText}" FontSize="40" Margin="28, 0, 0, 0" />
                    <StackLayout Orientation="Horizontal" Spacing="20"  Margin="28, 0, 0, 0">
                        <Button Clicked="Button_Clicked" Text="Мои достижения" FontSize="Body" Background="{StaticResource blueGradient}" TextColor="White" CornerRadius="12" FontFamily="noto_sans_regular"/>
                        <Button Clicked="Button_Clicked_1" Text="Достижения коллег" FontSize="Body" Style="{StaticResource menuButtonStyle}" CornerRadius="12"/>
                        <Button Clicked="Button_Clicked" Text="Все достижения" FontSize="Body" Style="{StaticResource menuButtonStyle}" CornerRadius="12"/>
                    </StackLayout>

                <Frame x:Name="achievementsFrame" CornerRadius="12" Background="{StaticResource blockGradient}" Padding="0, 40, 0, 40" HasShadow="False" VerticalOptions="FillAndExpand">
                                   
                </Frame>
            </StackLayout>
        </ScrollView>
    </ContentView.Content>
</ContentView>